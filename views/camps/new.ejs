<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create new campground</h1>
        <div style="width: 30%; margin: 40px auto; ">
            <form method="POST" action="/camps">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="camp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="camp[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="description" name="camp[description]"></textarea>
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon">$</span>
                    <input type="number" class="form-control" name="camp[price]" placeholder="Price per night" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>